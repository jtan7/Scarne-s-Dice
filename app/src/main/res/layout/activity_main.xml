<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView android:id="@+id/score_message"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/score_message" />
    <ImageView android:id="@+id/image_dice"
        android:paddingTop="16dp"
        android:layout_below="@id/score_message"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dice1" />
    <Button android:id="@+id/button_roll"
        android:layout_below="@id/image_dice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_roll"
        android:onClick="roll" />
    <Button android:id="@+id/button_hold"
        android:layout_toRightOf="@id/button_roll"
        android:layout_below="@id/image_dice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_hold"
        android:onClick="hold" />
    <Button android:id="@+id/button_reset"
        android:layout_toRightOf="@id/button_hold"
        android:layout_below="@id/image_dice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_reset"
        android:onClick="reset" />

</RelativeLayout>
